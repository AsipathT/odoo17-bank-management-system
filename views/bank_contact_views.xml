<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- Tree view for Bank Contact -->
    <record id="view_bank_contact_tree" model="ir.ui.view">
      <field name="name">bank.contact.tree</field>
      <field name="model">bank.contact</field>
      <field name="arch" type="xml">
        <tree string="Contacts">
          <field name="name"/>
          <field name="phone"/>
          <field name="mobile"/>
          <field name="email"/>
          <field name="address"/>
        </tree>
      </field>
    </record>

    <!-- Optional form view for Bank Contact if needed -->
    <record id="view_bank_contact_form" model="ir.ui.view">
      <field name="name">bank.contact.form</field>
      <field name="model">bank.contact</field>
      <field name="arch" type="xml">
        <form string="Contact Form">
          <group>
            <field name="name"/>
            <field name="phone"/>
            <field name="mobile"/>
            <field name="email"/>
            <field name="address"/>
            <field name="employee_id"/>
          </group>
        </form>
      </field>
    </record>

  </data>
</odoo>
